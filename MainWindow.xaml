<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Name="FormTestApp" x:Class="WpfApp.MainWindow"
        mc:Ignorable="d"
        Title="Тестовое задание" Height="351.072" Width="718">
    <Grid>

        <Label x:Name="lblStatus" Content="Статус: -" HorizontalAlignment="Left" Margin="22,279,0,0" VerticalAlignment="Top" Height="32" Width="178"/>
        <Button x:Name="btnStart" Content="Запустить" HorizontalAlignment="Left" Margin="246,282,0,0" VerticalAlignment="Top" Width="75" Click="btnStart_Click" Height="19"/>
        <GroupBox x:Name="grBoxData" Header="Настройки параметров подключения:" Height="258" Margin="24,7,0,0" VerticalAlignment="Top" Width="298" BorderBrush="#FF474A4C" Foreground="Black" OpacityMask="Black" HorizontalAlignment="Left">
            <Grid x:Name="gridSettings" HorizontalAlignment="Left" Height="241" Margin="-3,-2,-5.4,-3.8" VerticalAlignment="Top" Width="294">
                <Label x:Name="lblTypeRegister" Content="Тип данных:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3,3,0,0"/>
                <ComboBox x:Name="cbTypeRegister" HorizontalAlignment="Left" VerticalAlignment="Top" Width="137" Margin="104,8,0,0" Height="19" SelectedIndex="0" FontSize="10">
                    <System:String>Holding Registers</System:String>
                    <System:String>Input Registers</System:String>
                    <System:String>Coils</System:String>
                    <System:String>Discrete Inputs</System:String>
                </ComboBox>
                <Label x:Name="lblIP" Content="IP-адрес:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,35,0,0"/>
                <TextBox x:Name="edtIP" HorizontalAlignment="Left" Height="18" Margin="103,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137" FontSize="10" LostFocus="edtIP_LostFocus"/>
                <Label x:Name="lblTCP" Content="TCP-порт:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,68,0,0"/>
                <TextBox x:Name="edtTCP" HorizontalAlignment="Left" Height="18" Margin="104,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137" FontSize="10" LostFocus="edtTCP_LostFocus"/>
                <TextBox x:Name="edtClient" HorizontalAlignment="Left" Height="18" Margin="104,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137" FontSize="10"/>
                <Label x:Name="lblCl" Content="Клиенты(макс):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,100,0,0"/>
                <Button x:Name="btnUpdateData" Content="Обновить данные" HorizontalAlignment="Left" Margin="119,200,0,0" VerticalAlignment="Top" Width="108" Click="btnUpdate_Click" IsEnabled="False"/>
                <TextBox x:Name="edtRegAddr" HorizontalAlignment="Left" Height="18" Margin="104,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137" FontSize="10" LostFocus="edtRegAddr_LostFocus"/>
                <Label x:Name="lblRegAddr" Content="Рег.адрес:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,134,0,0"/>
                <TextBox x:Name="edtRegValue" HorizontalAlignment="Left" Height="18" Margin="104,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137" FontSize="10"/>
                <Label x:Name="lblRegValue" Content="Рег.значение:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,168,0,0"/>
            </Grid>
        </GroupBox>
        <DataGrid x:Name="dtGrid" HorizontalAlignment="Left" Height="242" VerticalAlignment="Top" Width="308" Margin="358,20,0,0" SelectedIndex="0" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding iAddr}" ClipboardContentBinding="{x:Null}" Header="Address" IsReadOnly="True" MinWidth="100"/>
                <DataGridTextColumn Binding="{Binding iValue}" ClipboardContentBinding="{x:Null}" Header="Value" IsReadOnly="True" Width="180" MinWidth="200"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="edtStartValue" HorizontalAlignment="Left" Height="18" Margin="422,283,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" FontSize="10" Text="1" UndoLimit="65535" LostFocus="edtStartValue_LostFocus"/>
        <Label x:Name="lblStartValue" Content="Начать с:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="360,278,0,0" Height="26" Width="59"/>
        <TextBox x:Name="edtStep" HorizontalAlignment="Left" Height="18" Margin="561,283,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" FontSize="10" Text="10"/>
        <Label x:Name="lblStep" Content="Шаг:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="516,279,0,0" Height="26" Width="35"/>

    </Grid>
</Window>
